<style>
  .main-footer {
    background-color: hsla(228, 12%, 10%, 1);
    color: hsla(36, 67%, 95%, 1); /* #F8F3E7 */
    padding: max(4em, 8cqw) var(--space-xxl);
    display: flex;
    flex-direction: column;
    gap: max(3em, 5cqw);
  }

  .footer-content-wrapper {
    display: grid;
    grid-template-columns: 1fr;
    gap: max(2em, 3cqw);
  }

  @media (max-width: 960px) {
    .footer-content-wrapper {
      grid-template-columns: 1fr 1fr;
    }
    .footer-brand {
      grid-column: span 2;
    }
  }

  .footer-brand {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: max(1em, 1.5cqw);
  }

  .footer-brand img {
    max-width: max(120px, 15cqw);
    height: auto;
  }

  .brand-description {
    font-size: max(0.9em, 1.1cqw);
    line-height: 1.6;
  }

  .social-icons {
    display: flex;
    gap: max(3em, 3cqw);
    margin-top: max(1em, 1.5cqw);
  }

  .social-icons a {
    color: hsla(36, 67%, 95%, 1); /* #F8F3E7 */
    font-size: max(1.5em, 1cqw); /* Adjust icon size */
    transition: color 0.3s ease;
  }

  .social-icons a:hover {
    color: hsla(43, 96%, 60%, 1); /* Gold hover color */
  }

  .social-icons a::after {
    display: none;
  }

  .social-icons svg {
    width: max(1.5em, 2cqw);
    height: max(1.5em, 2cqw);
  }

  .footer-links h3 {
    font-family: "Montserrat", sans-serif;
    font-weight: var(--font-weight-bold);
    font-size: max(1.2em, 1.5cqw);
    margin-bottom: max(1em, 1.5cqw);
  }

  .footer-links ul {
    list-style: none;
    display: flex;
    flex-direction: column;
    gap: max(0.5em, 0.8cqw);
  }

  .footer-links a {
    color: hsla(36, 67%, 95%, 1); /* #F8F3E7 */
    font-size: max(0.9em, 1.1cqw);
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .footer-links a::after {
    display: none;
  }

  .footer-links a:hover {
    color: hsla(43, 96%, 60%, 1); /* Gold hover color */
  }

  .footer-bottom {
    border-top: 1px solid hsla(225, 10%, 20%, 1); /* Darker border */
    padding-top: max(2em, 3cqw);
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: max(1em, 1.5cqw);
    text-align: center;
  }

  .copyright {
    font-size: max(0.8em, 1cqw);
    opacity: 0.7;
  }

  .legal-links {
    display: flex;
    gap: max(1em, 1.5cqw);
  }

  .legal-links a {
    color: hsla(36, 67%, 95%, 1); /* #F8F3E7 */
    font-size: max(0.8em, 1cqw);
    text-decoration: none;
    opacity: 0.7;
    transition: opacity 0.3s ease;
  }

  .legal-links a:hover {
    opacity: 1;
  }

  @media (min-width: 960px) {
    .footer-content-wrapper {
      grid-template-columns: 2fr 1fr 1fr 1fr; /* Adjust column distribution */
      text-align: left;
    }

    .footer-brand {
      align-items: flex-start;
    }

    .footer-bottom {
      flex-direction: row;
      justify-content: space-between;
      text-align: left;
    }
    .social-icons.mobile-only {
      display: none;
    }
  }

  @media (max-width: 960px) {
    .footer-links a {
      font-size: max(0.8em, 1cqw); /* Smaller font size for mobile links */
    }
    .social-icons.desktop-only {
      display: none; /* Hide original social icons on mobile */
    }
    .social-icons.mobile-only {
      display: flex; /* Show new social icons on mobile */
      justify-content: center; /* Center social icons */
      width: 100%;
      margin-top: max(1em, 1.5cqw); /* Add some space above */
    }
    .footer-content-wrapper {
      grid-template-columns: 1fr 1fr;
    }
    .footer-brand {
      grid-column: span 2;
    }
    span {
      display: none;
    }
  }
</style>
