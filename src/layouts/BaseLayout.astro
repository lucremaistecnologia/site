---
import { ClientRouter } from 'astro:transitions';
import '../styles/global.css'; /* Importa o CSS global */
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro'; /* Importa o componente Footer */
import WhatsAppIcon from '../components/WhatsAppIcon.astro'; // Importa o ícone do WhatsApp

interface Props {
	title: string;
	description?: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="pt-BR">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={Astro.props.description || "A Lucre+ é a plataforma de pagamentos premium para mentores, produtores e empresários digitais que buscam escalar seus negócios com taxas justas, tecnologia de ponta e um ecossistema completo."} />
		<meta name="keywords" content="plataforma de pagamentos, pagamentos online, infoprodutos, produtores digitais, mentores, ecommerce, checkout transparente, recuperação de vendas">
		<meta name="robots" content="index, follow">

		<!-- Open Graph / Facebook -->
		<meta property="og:type" content="website">
		<meta property="og:url" content={Astro.site ? Astro.site.href : 'default-url'}>
		<meta property="og:title" content={title}>
		<meta property="og:description" content={Astro.props.description || "A Lucre+ é a plataforma de pagamentos premium para mentores, produtores e empresários digitais que buscam escalar seus negócios com taxas justas, tecnologia de ponta e um ecossistema completo."} />
		<meta property="og:image" content={Astro.site ? new URL('/public/heroimage.webp', Astro.site.href).href : 'default-image-url'} />

		<!-- Twitter -->
		<meta property="twitter:card" content="summary_large_image">
		<meta property="twitter:url" content={Astro.site ? Astro.site.href : 'default-url'}>
		<meta property="twitter:title" content={title}>
		<meta property="twitter:description" content={Astro.props.description || "A Lucre+ é a plataforma de pagamentos premium para mentores, produtores e empresários digitais que buscam escalar seus negócios com taxas justas, tecnologia de ponta e um ecossistema completo."} />
		<meta property="twitter:image" content={Astro.site ? new URL('/public/heroimage.webp', Astro.site.href).href : 'default-image-url'} />

		<script type="application/ld+json">
			{
				"@context": "https://schema.org",
				"@type": "Organization",
				"name": "Lucre+",
				"url": "https://lucre.com",
				"logo": "https://lucre.com/logo.webp",
				"sameAs": [
					"https://www.facebook.com/lucremais/",
					"https://www.instagram.com/lucremais/"
				]
			}
		</script>

		<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<meta http-equiv="Content-Security-Policy" content="default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' https://fonts.googleapis.com 'unsafe-inline'; font-src 'self' https://fonts.gstatic.com data:; connect-src 'self' https://wa.me https://api.whatsapp.com; img-src 'self' data:; frame-src 'self';">
		<ClientRouter />
	</head>
	<body>
		<Header />
		<slot />
		<Footer />
		<WhatsAppIcon />
	</body>
</html>
<style is:global>
	/* Estilos globais movidos para src/styles/global.css */
	/* Manter apenas resets ou estilos muito específicos do layout aqui, se necessário */
	code {
		font-family:
			Menlo,
			Monaco,
			Lucida Console,
			Liberation Mono,
			DejaVu Sans Mono,
			Bitstream Vera Sans Mono,
			Courier New,
			monospace;
	}
</style>
